@model ShopCartViewModels

<div class="container">
    @foreach (var el in Model.shopCart.listShopItems)
    {
    <div class="alert-warning mt-3">
        <b>Іграшка:</b> @el.toy.name<br/>
        <b>Ціна:</b> @el.toy.price.ToString("c")
    </div>
    }
    <hr/>
    <a class="btn btn-danger" asp-controller="Order" asp-action="Checkout">Сплатити</a>
</div>