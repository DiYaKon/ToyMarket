@*Shared - це шаблони сторінок які юзаються*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>

    <header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">
        <a class="text-muted" href="#"></a>
      </div>
      <div class="col-4 text-center">
        <a class="blog-header-logo text-dark" asp-controller="Home" asp-action="Index">Ігроляндія</a>@*використання посилання через TagHelper*@
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center">
        <a class="text-muted" href="#" aria-label="Search">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24" focusable="false"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5"></circle><path d="M21 21l-5.2-5.2"></path></svg>
        </a>
        <a class="btn btn-sm btn-outline-secondary" href="/ShopCart">Корзинка</a>
      </div>
    </div>
  </header>

  <div class="nav-scroller py-1 mb-2">
    <nav class="nav d-flex justify-content-between">
      <a class="p-2 text-muted" href="/Toys/List/">Всі іграшки</a> 
      <a class="p-2 text-muted" href="/Toys/List/doll/">Ляльки</a>
      <a class="p-2 text-muted" href="/Toys/List/soft/">М'які іграшки</a>
      <a class="p-2 text-muted" href="/Toys/List/construction/">Конструктори</a>
      <a class="p-2 text-muted" href="/Toys/List/car/">Машинки</a>
      <a class="p-2 text-muted" href="/Toys/List/board/">Настільні ігри</a>
      <a class="p-2 text-muted" href="/Toys/List/puzzle/">Пазли</a>
      <a class="p-2 text-muted" href="/Toys/List/educational/">Розвивальні іграшки</a> @*використання варіанту-посилання через href*@
      <a class="p-2 text-muted" href="/Toys/List/lego/">Конструктор LEGO</a> 
    </nav>
  </div>

    <div class="container" mt-5>
        @RenderBody()
    </div>

    <footer class="container">
        <p class="float-right"><a href="#">Back to top</a></p>
        <p>© 2023 Ігроляндія. · <a href="#">Privacy</a></p>
    </footer>

    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>
